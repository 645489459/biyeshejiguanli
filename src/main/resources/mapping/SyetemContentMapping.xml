<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zcbigdata.mybits_demo.mapper.SystemContentMapper">

    <resultMap id="BaseResultMap" type="cn.zcbigdata.mybits_demo.entity.SystemContent">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="content" jdbcType="VARCHAR" property="content" />
    </resultMap>

    <select id="selectSys" resultMap="BaseResultMap">
        select * from system_content
    </select>
    <insert id="insertSys" parameterType="java.lang.String">
        insert into system_content (content)
        values (#{content})
    </insert>
    <update id="updateSys" parameterType="java.lang.String">
        update system_content
        set content = #{content}
        where id = #{id}
    </update>
    <delete id="deleteSys"  parameterType="java.lang.Integer">
        delete from system_content
        where id = #{id};
    </delete>



</mapper>