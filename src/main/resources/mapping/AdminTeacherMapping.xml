<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.zcbigdata.mybits_demo.mapper.AdminTeacherMapper" >

    <resultMap id="BaseResultMap" type="cn.zcbigdata.mybits_demo.entity.AdminTeacher" >
        <id      column="id"        property="id"        jdbcType="INTEGER" />
        <result  column="name"  property="name"  jdbcType="VARCHAR" />
        <result  column="password"  property="password"  jdbcType="VARCHAR" />
        <result  column="cno"  property="cno"  jdbcType="VARCHAR" />
        <result  column="flag"  property="flag"  jdbcType="VARCHAR" />

    </resultMap>

    <sql id="Base_Column_List" >
        id,name,password,cno,flag
    </sql>

    <insert id="insert" parameterType="cn.zcbigdata.mybits_demo.entity.AdminTeacher" >
        insert into admin (name,password,cno)
        values (#{name,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR},#{cno,jdbcType=VARCHAR})
    </insert>

    <select id="selectAll" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from admin
        limit #{param1},#{param2}
    </select>

    <delete id="delete" parameterType="java.lang.Integer">
        delete
        from admin where id = #{id,jdbcType = INTEGER}
    </delete>

    <update id="update" parameterType="cn.zcbigdata.mybits_demo.entity.AdminTeacher">
        update admin
        set name = #{name,jdbcType = VARCHAR},password = #{password,jdbcType=VARCHAR},cno = #{cno,jdbcType=VARCHAR} where id = #{id,jdbcType=INTEGER}
    </update>

    <select id="selectCount"  resultType="java.lang.Integer" >
        SELECT count(*) FROM admin;
    </select>

    <select id="login" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from admin
        where cno = #{param1,jdbcType = VARCHAR} and password = #{param2,jdbcType = VARCHAR}
    </select>
</mapper>