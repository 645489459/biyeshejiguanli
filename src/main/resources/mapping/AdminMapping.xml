<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zcbigdata.mybits_demo.mapper.AdminMapper">

    <resultMap id="BaseResultMap" type="cn.zcbigdata.mybits_demo.entity.Admin">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="cno" jdbcType="VARCHAR" property="cno" />
        <result column="flag" jdbcType="VARCHAR" property="flag" />
    </resultMap>

    <select id="selectAllAdm" resultMap="BaseResultMap">
        select * from admin
    </select>
    <select id="adminLogin" resultMap="BaseResultMap">
        select * from admin where cno=#{cno} and password=#{password}
    </select>
    <insert id="InsertAdm" parameterType="cn.zcbigdata.mybits_demo.entity.Admin">
        insert into admin (name,password,sno,cno)
        values (#{name}, #{password},#{cno})
    </insert>
    <update id="UpdateAdm" parameterType="cn.zcbigdata.mybits_demo.entity.Admin">
        update admin
        set name = #{name},
            password = #{password},
            cno= #{cno}
        where id = #{id}
    </update>
    <delete id="DeleteAdm"  parameterType="java.lang.Integer">
        delete from admin
        where id = #{id};
    </delete>



</mapper>
