<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zcbigdata.mybits_demo.mapper.StudentMapper">

    <resultMap id="BaseResultMap" type="cn.zcbigdata.mybits_demo.entity.Student">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="sno" jdbcType="VARCHAR" property="sno" />
        <result column="cno" jdbcType="VARCHAR" property="cno" />
        <result column="flag" jdbcType="VARCHAR" property="flag" />
    </resultMap>

    <select id="selectAllStu" resultMap="BaseResultMap">
        select * from student
    </select>
    <select id="teacherSelectStu" resultMap="BaseResultMap" parameterType="java.lang.String">
        select * from student where cno=#{cno}
    </select>
    <select id="studentSelectStu" resultMap="BaseResultMap" parameterType="java.lang.String">
        select * from student where sno=#{sno}
    </select>
    <select id="loginSelect" resultMap="BaseResultMap" parameterType="cn.zcbigdata.mybits_demo.entity.Student">
        select * from student where sno=#{sno} AND password=#{password}
    </select>
    <insert id="InsertStu" parameterType="cn.zcbigdata.mybits_demo.entity.Student">
        insert into student (name,password,sno,cno)
        values (#{name}, #{password},#{sno},#{cno})
    </insert>
    <update id="UpdateStu" parameterType="cn.zcbigdata.mybits_demo.entity.Student">
        update student
        set name = #{name},
            password = #{password},
            sno= #{sno},
            cno= #{cno}
        where id = #{id}
    </update>
    <delete id="deleteStu"  parameterType="java.lang.Integer">
        delete from student
        where id = #{id};
    </delete>



</mapper>